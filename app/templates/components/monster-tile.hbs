<li class="monster-tile">
  <div class="parts-container">
    <h3 class="name-header">{{monster.name}}</h3>
    <img class="head" src="{{monster.head}}" alt="" />
    <img class="torso" src="{{monster.torso}}" alt="" />
    <img class="left-arm" src="{{monster.leftArm}}" alt="" />
    <img class="right-arm" src="{{monster.rightArm}}" alt="" />
    <img class="left-leg" src="{{monster.leftLeg}}" alt="" />
    <img class="right-leg" src="{{monster.rightLeg}}" alt="" />
    <div class="shadow"></div>
  </div>
  {{monster-update
    monster=monster
    update="update"
    destroyMonster="destroyMonster"
    heads=heads
    torsos=torsos
    rightArms=rightArms
    leftArms=leftArms
    rightLegs=rightLegs
    leftLegs=leftLegs}}
      <!-- <button class="main-button half" {{action 'delete' monster}}>Delete</button> -->
</li>
