<div class="title-header">
  <h1 class="main-header">BEHEMOTH</h1>
  <h3 class="text-header">builder</h3>
</div>
{{#liquid-if isTraitShowing }}
<div class="top-container">

  <form class="monster-container">
    <h3 class="secondary-header">Name</h3>
    <div class="name-container">
      {{input value=name id="name"}}
    </div>
    <div class="trait-box">
      <div class="secondary-header">Head</div>
      <div class="button-container">
        {{#power-select
          searchEnabled=false
          options=heads
          selected=heads.name
          onchange=(action (mut heads.name)) as |head|}}
          {{head.name}}
        {{/power-select}}
      </div>
      <h3 class="secondary-header">Torso</h3>
      <div class="button-container">
        {{#power-select
          searchEnabled=false
          options=torsos
          selected=torsos.name
          onchange=(action (mut torsos.name)) as |torso|}}
          {{torso.name}}
        {{/power-select}}
      </div>
      <h3 class="secondary-header">Left Arm</h3>
      <div class="button-container">
        {{#power-select
          searchEnabled=false
          options=leftArms
          selected=leftArms.name
          onchange=(action (mut leftArms.name)) as |leftArm|}}
          {{leftArm.name}}
        {{/power-select}}
      </div>
      <h3 class="secondary-header">Right Arm</h3>
      <div class="button-container">
        {{#power-select
          searchEnabled=false
          options=rightArms
          selected=rightArms.name onchange=(action (mut rightArms.name)) as |rightArm|}}
          {{rightArm.name}}
        {{/power-select}}
      </div>
      <h3 class="secondary-header">Right Leg</h3>
      <div class="button-container">
        {{#power-select
          searchEnabled=false
          options=rightLegs
          selected=rightLegs.name
          onchange=(action (mut rightLegs.name)) as |rightLeg|}}
          {{rightLeg.name}}
        {{/power-select}}
      </div>
      <h3 class="secondary-header">Left Leg</h3>
      <div class="button-container">
        {{#power-select
          searchEnabled=false
          options=leftLegs
          selected=leftLegs.name
          onchange=(action (mut leftLegs.name)) as |leftLeg|}}
          {{leftLeg.name}}
        {{/power-select}}
      </div>
    </div>

      <button class="main-button" {{action 'save'}}>Save</button>

    <img id='head' class="head" src={{heads.name.headSVG}} />
    <div class="hidden">
      {{input value=heads.name.headSVG id="head"}}
    </div>
    <img class="left-arm" src={{leftArms.name.leftArmSVG}} />
    <div class="hidden">
      {{input value=leftArms.name.leftArmSVG id="leftArm"}}
    </div>
    <img class="right-arm" src={{rightArms.name.rightArmSVG}} />
    <div class="hidden">
      {{input value=rightArms.name.rightArmSVG id="rightArm"}}
    </div>
    <img class="torso" src={{torsos.name.torsoSVG}} />
    <div class="hidden">
      {{input value=torsos.name.torsoSVG id="torso"}}
    </div>
    <img class="right-leg" src={{rightLegs.name.rightLegSVG}} />
    <div class="hidden">
      {{input value=rightLegs.name.rightLegsSVG id="rightLeg"}}
    </div>
    <img class="left-leg" src={{leftLegs.name.leftLegSVG}} />
    <div class="hidden">
      {{input value=leftLegs.name.leftLegsSVG id="leftLeg"}}
    </div>

  </form>

</div>
{{else}}
 <button class="main-button" {{action 'traitShow'}}>Begin</button>
{{/liquid-if}}
