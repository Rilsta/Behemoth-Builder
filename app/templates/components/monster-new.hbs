<div class="top-container">

  <div class="title-header">
    <h1 class="main-header">BEHEMOTH</h1>
    <h3 class="text-header">builder</h3>
  </div>
  {{#liquid-if isTraitShowing }}
  <!-- <a href="#">View Behemoths</a> -->
  <div class="trait-box">

    <div class="secondary-header">Head</div>
    <div class="button-container">
      {{#power-select options=heads selected=heads.name onchange=(action (mut heads.name)) as |head|}}
        {{head.name}}
      {{/power-select}}
    </div>

    <h3 class="secondary-header">Torso</h3>
    <div class="button-container">
      {{#power-select options=torsos selected=torsos.name onchange=(action (mut torsos.name)) as |torso|}}
        {{torso.name}}
      {{/power-select}}
    </div>

    <h3 class="secondary-header">Left Arm</h3>
    <div class="button-container">
      {{#power-select options=leftArms selected=leftArms.name onchange=(action (mut leftArms.name)) as |leftArm|}}
        {{leftArm.name}}
      {{/power-select}}
    </div>

    <h3 class="secondary-header">Right Arm</h3>
    <div class="button-container">
      {{#power-select options=rightArms selected=rightArms.name onchange=(action (mut rightArms.name)) as |rightArm|}}
        {{rightArm.name}}
      {{/power-select}}
    </div>

    <h3 class="secondary-header">Legs</h3>
    <div class="button-container">
      {{#power-select options=legs selected=legs.name onchange=(action (mut legs.name)) as |legs|}}
        {{legs.name}}
      {{/power-select}}
    </div>
  </div>
  {{else}}
   <button class="main-button" {{action 'traitShow'}}>Begin</button>
  {{/liquid-if}}
</div>

<form class="monster-container">
  <h3 class="secondary-header">Name</h3>
  <div class="button-container">
    {{input value=name id="name"}}
  </div>

  <img id='head' class="head" src={{heads.name.headSVG}} />
  <div class="hidden">
    {{input value=heads.name.headSVG id="head"}}
  </div>

  <img class="left-arm" src={{leftArms.name.leftArmSVG}} />
  <div class="hidden">
    {{input value=leftArms.name.leftArmSVG id="leftArm"}}
  </div>
  <img class="right-arm" src={{rightArms.name.rightArmSVG}} />
  <div class="hidden">
    {{input value=rightArms.name.rightArmSVG id="rightArm"}}
  </div>
  <img class="torso" src={{torsos.name.torsoSVG}} />
  <div class="hidden">
    {{input value=torsos.name.torsoSVG id="torso"}}
  </div>
  <img class="legs" src={{legs.name.legsSVG}} />
  <div class="hidden">
    {{input value=legs.name.legsSVG id="legs"}}
  </div>
  <button class="main-button" {{action 'save'}}>Save</button>
</form>
